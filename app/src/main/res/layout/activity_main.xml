<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainViewModel"
            type="com.github.a_rin.weatherapp.MainViewModel" />
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/notosansjp_bold"
            android:text="@{mainViewModel.location}"
            android:textColor="@color/textColor"
            android:textSize="32sp"
            android:contentDescription="@{mainViewModel.location}"
            app:layout_constraintBottom_toTopOf="@+id/tempTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Tokyo"/>

        <TextView
            android:id="@+id/tempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/temp(mainViewModel.temp)}"
            android:textColor="@color/textColor"
            android:textSize="48sp"
            android:contentDescription="@{@string/temp(mainViewModel.temp)}"
            app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintTop_toTopOf="@+id/weatherImageView"
            tools:text="26℃" />

        <TextView
            android:id="@+id/weatherTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{mainViewModel.weatherCondition}"
            android:textColor="@color/textColor"
            android:textSize="32sp"
            android:contentDescription="@{mainViewModel.weatherCondition}"
            app:layout_constraintBottom_toBottomOf="@+id/weatherImageView"
            app:layout_constraintEnd_toEndOf="@+id/tempTextView"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@+id/tempTextView"
            tools:text="Sunny" />

        <ImageView
            android:id="@+id/weatherImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/tenki01"
            app:layout_constraintBottom_toTopOf="@+id/lowTempTextView"
            app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tempTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:weatherIcon="@{mainViewModel.weatherIcon}"/>

        <TextView
            android:id="@+id/highTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/high_temp(mainViewModel.highTemp)}"
            android:textColor="@color/highTemp"
            android:textSize="24sp"
            android:contentDescription="@{@string/high_temp(mainViewModel.highTemp)}"
            app:layout_constraintBottom_toTopOf="@+id/CenterGuideline"
            app:layout_constraintEnd_toStartOf="@+id/lowTempTextView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            tools:text="H 29℃" />

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slash"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/CenterGuideline"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintLeft_toRightOf="@id/highTempTextView"
            app:layout_constraintRight_toLeftOf="@id/lowTempTextView" />

        <TextView
            android:id="@+id/lowTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/high_temp(mainViewModel.lowTemp)}"
            android:textColor="@color/lowTemp"
            android:textSize="24sp"
            android:contentDescription="@{@string/high_temp(mainViewModel.lowTempTemp)}"
            app:layout_constraintBottom_toTopOf="@+id/CenterGuideline"
            app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/highTempTextView"
            tools:text="L 20℃" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintTop_toTopOf="@+id/CenterGuideline"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{mainViewModel.later0Sting}"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/regularText"
                    android:contentDescription="@{mainViewModel.later0Sting}"
                    tools:text="06"/>

                <ImageView
                    android:id="@+id/imageView6h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tenki01"
                    app:weatherIcon="@{mainViewModel.later0}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{mainViewModel.later3Sting}"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/regularText"
                    android:contentDescription="@{mainViewModel.later3Sting}"
                    tools:text="09"/>

                <ImageView
                    android:id="@+id/imageView9h"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tenki02"
                    app:weatherIcon="@{mainViewModel.later3}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{mainViewModel.later6Sting}"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/regularText"
                    android:contentDescription="@{mainViewModel.later6Sting}"
                    tools:text="12"/>

                <ImageView
                    android:id="@+id/imageView12h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tenki03"
                    app:weatherIcon="@{mainViewModel.later6}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{mainViewModel.later9Sting}"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/regularText"
                    android:contentDescription="@{mainViewModel.later9Sting}"
                    tools:text="15"/>

                <ImageView
                    android:id="@+id/imageView15h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tenki04"
                    app:weatherIcon="@{mainViewModel.later9}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{mainViewModel.later12Sting}"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/regularText"
                    android:contentDescription="@{mainViewModel.later12Sting}"
                    tools:text="18"/>

                <ImageView
                    android:id="@+id/imageView18h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tenki09"
                    app:weatherIcon="@{mainViewModel.later12}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView21h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{mainViewModel.later15Sting}"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/regularText"
                    android:contentDescription="@{mainViewModel.later15Sting}"
                    tools:text="21"/>

                <ImageView
                    android:id="@+id/imageView21h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tenki10"
                    app:weatherIcon="@{mainViewModel.later15}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{mainViewModel.later18Sting}"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/regularText"
                    android:contentDescription="@{mainViewModel.later18Sting}"
                    tools:text="24"/>

                <ImageView
                    android:id="@+id/imageView24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tenki11"
                    app:weatherIcon="@{mainViewModel.later18}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{mainViewModel.later21Sting}"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/regularText"
                    android:contentDescription="@{mainViewModel.later21Sting}"
                    tools:text="03"/>

                <ImageView
                    android:id="@+id/imageView3h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tenki13"
                    app:weatherIcon="@{mainViewModel.later21}"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/windTextView"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/wind"
            android:gravity="center"
            android:text="@{String.valueOf(mainViewModel.wind)}"
            android:textColor="@color/textColor"
            android:textSize="@dimen/regularText"
            android:contentDescription="@{String.valueOf(mainViewModel.wind)}"
            app:layout_constraintEnd_toEndOf="@id/rightGuideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/humidityTextView"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:text="120" />

        <TextView
            android:id="@+id/pressureTextView"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/pressure"
            android:gravity="center_horizontal|center_vertical"
            android:text="@{String.valueOf(mainViewModel.pressure)}"
            android:textColor="@color/textColor"
            android:textSize="@dimen/regularText"
            android:contentDescription="@{String.valueOf(mainViewModel.pressure)}"
            app:layout_constraintEnd_toStartOf="@+id/humidityTextView"
            app:layout_constraintStart_toStartOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:text="1013" />

        <TextView
            android:id="@+id/humidityTextView"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/humidity"
            android:gravity="center"
            android:text="@{String.valueOf(mainViewModel.humidity)}"
            android:textColor="@color/textColor"
            android:textSize="@dimen/regularText"
            android:contentDescription="@{String.valueOf(mainViewModel.humidity)}"
            app:layout_constraintEnd_toStartOf="@+id/windTextView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pressureTextView"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:text="78" />

        <ImageButton
            android:id="@+id/inputButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@null"
            android:padding="8dp"
            android:contentDescription="@string/input_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/plus_button" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/CenterGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>